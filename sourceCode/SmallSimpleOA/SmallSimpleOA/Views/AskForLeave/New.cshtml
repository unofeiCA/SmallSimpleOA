@model SmallSimpleOA.ViewModels.AskFroLeaveNewViewModel;
<form asp-controller="AskForLeave" asp-action="DoNew" method="post">
    <div class="row container">
        <div class="col-12">
            <h3 class="float-left">New Ask For Leave</h3>
        </div>
    </div>
    <div class="container row ">
        <div class="col-12 container">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">From</span>
                </div>
                <input type="text" id="StartTime" name="StartTime" class="form-control datetimepicker-input" autocomplete="off"  data-toggle="datetimepicker" data-target="#StartTime">
                <div class="input-group-prepend">
                    <span class="input-group-text">To</span>
                </div>
                <input type="text" id="EndTime" name="EndTime" class="form-control datetimepicker-input" autocomplete="off"  data-toggle="datetimepicker" data-target="#EndTime">
            </div>
        </div>
    </div>
    <div class="container row">
        <div class="col-12 container">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Reason</span>
                </div>
                <input type="text" class="form-control" asp-for="Reason" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
        </div>
    </div>
    <div class="container row ">
        <div class="col-12 container">
            Memo
            <textarea class="form-control rounded-0" style="resize:none;" asp-for="Memo" rows="10"></textarea>
        </div>
    </div>

    @if (Model.LastNewSuccess == 1)
    {
        <div class="container row">
            <div class="col-12">
                <p class="text-success">@Model.LastNewPrompt</p>
            </div>
        </div>
    }
    else if (Model.LastNewSuccess == -1)
    {
        <div class="container row">
            <div class="col-12">
                <p class="text-danger">@Model.LastNewPrompt</p>
            </div>
        </div>
    }
    <br />
    <div class="container row ">
        <div class="col-12 ">
            <div class="pl-2  float-right">
                <button type="submit" class="btn btn-success">SUBMIT</button>
            </div>
            <div class="pl-2  float-right">
                <button type="button" class="btn btn-info" onclick="javascript:history.go(-1); return false;">BACK</button>
            </div>

        </div>
    </div>
</form>
@section Scripts{
<script type="text/javascript">
$(function () {
        $('#StartTime').datetimepicker();
        $('#EndTime').datetimepicker({
             useCurrent: false
         });
     });

    $("#StartTime").on("change.datetimepicker", function (e) {
            $('#EndTime').datetimepicker('minDate', e.date);
        });
        $("#EndTime").on("change.datetimepicker", function (e) {
            $('#StartTime').datetimepicker('maxDate', e.date);
        });</script>
}