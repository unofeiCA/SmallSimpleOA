@{
    Layout = "";
}
@model Uzer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmallSimpleOA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/additionalCss.css" />

</head>
<body>
    <div class="jumbotron bg-dark">
        <h1 class="display-4 text-white">Small Simple OA</h1>
    </div>
    <div class="container mx-auto w-50">
        <form method="post"  asp-controller="Login" asp-action="DoLogin" role="form">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" asp-for="Email"  aria-describedby="emailHelp" placeholder="Enter email"/>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password"/>
            </div>
            <div class="form-group">
                @if (ViewData["pwdNotCorrect"] != null && ViewData["pwdNotCorrect"].Equals("1"))
                 {
                     <label class="form-check-label text-danger"  >Incorrect Password or Email</label>
                 }
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </form>
    </div>

    <hr />
    <footer>
        <p>&copy; 2018 - SmallSimpleOA</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
